@using LandRegistrationUI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<link href="~/Content/login_style.css" rel="stylesheet" />

<div>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5" style="box-shadow:2px 2px 5px #999;border:1px solid #ccc;background-color: #f3f3f3;">
                    <div class="card-body">
                        <h5 class="card-title text-center">
                            Sign In
                            <hr />
                        </h5>

                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @*<form class="form-signin">*@
                            <div class="form-label-group" style="left: 50%;    transform: translateX(-39%);">
                                @*<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>*@
                                @Html.TextBoxFor(m => m.Email, new { id = "inputEmail", @class = "form-control", placeholder = "Email address", required = "true", autofocus = "true" })
                                <label for="inputEmail">Email address</label>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-label-group " style="left: 50%;    transform: translateX(-39%);">
                                @*<input type="password" id="inputPassword" class="form-control" placeholder="Password" required>*@
                                @Html.PasswordFor(m => m.Password, new { id = "inputPassword", @class = "form-control", placeholder = "Password", required = "true" })
                                <label for="inputPassword">Password</label>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @*<div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
            </div>*@
                            <button class="btn btn-lg btn-primary btn-block" type="submit" style="width: 50%; margin: 0px auto;"><i class="fa fa-sign-in"></i> Sign in</button>

                            <p class="mt-3 text-center">
                                @Html.ActionLink("Register as a new user", "Register")
                            </p>
                            @*
                 <hr class="my-4">
                <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
            <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>*@
                            @*</form>*@
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



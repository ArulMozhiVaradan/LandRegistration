@model LandRegistrationUI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<link href="~/Content/login_style.css" rel="stylesheet" />
<style>
    .input_width{
        max-width:100%;
    }
</style>
<div>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5" style="box-shadow:2px 2px 5px #999;border:1px solid #ccc;background-color: #f3f3f3;">
                    <div class="card-body">
                        <h5 class="card-title text-center">
                            Create a new account
                            <hr />
                        </h5>

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-12 control-label" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input_width" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-12 control-label" })
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control input_width" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-12 control-label" })
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input_width" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-12 text-center">
                                    @*<input type="submit" value="" />*@
                                    <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-user"></i> Register</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


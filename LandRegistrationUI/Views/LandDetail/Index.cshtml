
@{
    ViewBag.Title = "Index";
}
<style>
    .label_text {
        font-size: 16px;
        padding-top: 5px;
        font-weight: 500;
    }
    .custom_checkbox {
        display: inline-block;
        margin: 5px 15px;
    }
</style>
<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <h4 class="text-center">Information Retrival System</h4>
        </div>
    </div>
    <hr />

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">Region</div>
                    <div class="col-9">
                        <div class="form-group">
                            <select class="custom-select">
                                <option selected="">Please select</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">Taluk</div>
                    <div class="col-9">
                        <div class="form-group">
                            <select class="custom-select">
                                <option selected="">Please select</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">Revenue/Village</div>
                    <div class="col-9">
                        <div class="form-group">
                            <select class="custom-select">
                                <option selected="">Please select</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">LGR</div>
                    <div class="col-9">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Enter LGR" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">Ward</div>
                    <div class="col-9">
                        <div class="form-group">
                            <select class="custom-select">
                                <option selected="">Please select</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">Block</div>
                    <div class="col-9">
                        <div class="form-group">
                            <select class="custom-select">
                                <option selected="">Please select</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">T.S.No</div>
                    <div class="col-9">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Enter TS.No" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6">
                <div class="row">
                    <div class="col-3 label_text">R.S.No</div>
                    <div class="col-9">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Enter RS.No" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-3 col-md-2 label_text">Sub-division</div>
                    <div class="col-9">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox custom_checkbox">
                                <input type="checkbox" class="custom-control-input" id="customCheck1" checked="">
                                <label class="custom-control-label" for="customCheck1">Sub-division 1</label>
                            </div>
                            <div class="custom-control custom-checkbox custom_checkbox">
                                <input type="checkbox" class="custom-control-input" id="customCheck2" checked="">
                                <label class="custom-control-label" for="customCheck2">Sub-division 2</label>
                            </div>
                            <div class="custom-control custom-checkbox custom_checkbox">
                                <input type="checkbox" class="custom-control-input" id="customCheck3" checked="">
                                <label class="custom-control-label" for="customCheck3">Sub-division 3</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <div>
                    <button class="btn btn-primary">Search</button>
                </div>
            </div>
        </div>

    }
</div>


